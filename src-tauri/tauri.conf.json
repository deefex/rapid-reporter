{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rapid Reporter",
  "version": "1.0.4",
  "identifier": "com.deefex.rapidreporter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Rapid Reporter",
        "width": 520,
        "height": 420,
        "alwaysOnTop": true
      },
      {
        "label": "region_overlay",
        "create": false,
        "title": "Region Select",
        "url": "index.html#/overlay",
        "transparent": true,
        "backgroundColor": "#00000000",
        "visible": false,
        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "fullscreen": false,
        "acceptFirstMouse": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
